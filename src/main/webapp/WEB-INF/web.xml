<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
 <welcome-file-list>  
   <welcome-file>login.html</welcome-file>  
   <welcome-file>home.jsp</welcome-file>  
  </welcome-file-list> 
  <display-name>Archetype Created Web Application</display-name>
  <session-config>
		<session-timeout>20</session-timeout>
	</session-config>
  	<servlet>
		<servlet-name>RESTServices</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.trs.config.ITRApplications</param-value>
		</init-param>
		<load-on-startup>100</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>RESTServices</servlet-name>
		<url-pattern>/v1/*</url-pattern>
	</servlet-mapping>
	<servlet>
	<servlet-name>LoginServlet</servlet-name>
	<servlet-class>com.trs.servlet.MyLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>LoginServlet</servlet-name>
	<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
	<servlet-name>Logout</servlet-name>
	<servlet-class>com.trs.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Logout</servlet-name>
	<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
	<servlet-name>ITRFilingRequest</servlet-name>
	<servlet-class>com.trs.servlet.FilingRequest</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>ITRFilingRequest</servlet-name>
	<url-pattern>/returnfilingreq</url-pattern>
	</servlet-mapping>
	<context-param>
	<param-name>Cache-Control</param-name>
	<param-value>no-cache,no-store,must-revalidate</param-value>
	</context-param>
	<context-param>
	<param-name>Pragma</param-name>
	<param-value>no-cache</param-value>
	</context-param>
	<context-param>
	<param-name>Expires</param-name>
	<param-value>0</param-value>
	</context-param>
</web-app>
